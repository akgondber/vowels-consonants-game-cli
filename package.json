{
	"name": "vowels-consonants-game-cli",
	"description": "Count vowels and consonants in the escaping word",
	"version": "1.1.1",
	"license": "MIT",
	"author": "Rushan Alyautdinov <akgondber@gmail.com>",
	"homepage": "https://github.com/akgondber/vowels-consonants-game-cli",
	"repository": "akgondber/vowels-consonants-game-cli",
	"keywords": [
		"game",
		"english",
		"fun",
		"cli",
		"count",
		"word",
		"vowels",
		"consonants"
	],
	"bin": {
		"vowels-consonants-game-cli": "dist/cli.js",
		"vowels-consonants-game": "dist/cli.js",
		"vowels-consonants": "dist/cli.js",
		"vcgc": "dist/cli.js",
		"vcg": "dist/cli.js"
	},
	"type": "module",
	"engines": {
		"node": ">=16"
	},
	"scripts": {
		"build": "tsc",
		"dev": "tsc --watch",
		"test": "prettier --check . && xo && ava",
		"lint": "xo",
		"go": "node dist/cli.js",
		"prettify": "prettier . --write",
		"xofix": "xo --fix",
		"play": "node dist/cli.js",
		"jtest": "ava"
	},
	"files": [
		"dist"
	],
	"dependencies": {
		"ink": "^4.2.0",
		"ink-big-text": "^2.0.0",
		"ink-gradient": "^3.0.0",
		"ink-text-input": "^5.0.1",
		"meow": "^12.0.1",
		"react": "^18.2.0"
	},
	"devDependencies": {
		"@sindresorhus/tsconfig": "^3.0.1",
		"@types/ink-testing-library": "^1.0.1",
		"@types/react": "^18.0.32",
		"ava": "^5.2.0",
		"eslint-config-xo-react": "^0.27.0",
		"eslint-plugin-react": "^7.32.2",
		"eslint-plugin-react-hooks": "^4.6.0",
		"ink-testing-library": "^3.0.0",
		"prettier": "^2.8.7",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.3",
		"xo": "^0.54.2"
	},
	"ava": {
		"extensions": {
			"ts": "module",
			"tsx": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		],
		"timeout": "5m",
		"files": [
			"test.tsx"
		]
	},
	"xo": {
		"extends": "xo-react",
		"prettier": true,
		"rules": {
			"react/prop-types": "off",
			"n/prefer-global/process": "off"
		}
	},
	"prettier": {
		"useTabs": true,
		"semi": true,
		"singleQuote": true,
		"quoteProps": "as-needed",
		"bracketSpacing": false,
		"arrowParens": "avoid",
		"trailingComma": "all"
	}
}
